{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "functions": {
    "src/app/api/grader/search/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "src/app/api/grader/analyze/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/grader/evaluate/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/grader/report/*/pdf/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/api/admin/settings/optimize/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/xtal/search/route.ts": {
      "maxDuration": 15
    },
    "src/app/api/xtal/aspects/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/xtal/explain/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/xtal/feedback/route.ts": {
      "maxDuration": 5
    },
    "src/app/api/xtal/search-full/route.ts": {
      "maxDuration": 15
    },
    "src/app/api/admin/analytics/dashboard/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/warm-showcase",
      "schedule": "0 0 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
