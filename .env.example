# XTAL Search Website Environment Variables
# Copy this file to .env.local and fill in your values

# Resend API Key (optional - for email notifications)
# Get yours at https://resend.com
RESEND_API_KEY=

# Email address to receive demo request notifications
NOTIFICATION_EMAIL=

# XTAL Search Backend (for /try page)
XTAL_BACKEND_URL=http://dewine-dev-alb-687752695.us-east-1.elb.amazonaws.com
XTAL_COLLECTION=xtaldemo

# Anthropic API Key (for Site Search Grader)
# Get yours at https://console.anthropic.com
ANTHROPIC_API_KEY=

# Upstash Redis (for grader reports, logs, prompts)
# Get yours at https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cognito Auth (for admin panel backend API access)
COGNITO_URL=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_SCOPE=

# ── NextAuth.js v5 (SSO Authentication) ────────────────────────
# Generate: openssl rand -base64 32
AUTH_SECRET=

# Vercel Postgres (auto-populated when you add Vercel Postgres integration)
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=

# Google OAuth (create at console.cloud.google.com → APIs & Services → Credentials)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Microsoft Entra ID (create at portal.azure.com → App Registrations)
AUTH_MICROSOFT_ENTRA_ID_ID=
AUTH_MICROSOFT_ENTRA_ID_SECRET=
AUTH_MICROSOFT_ENTRA_ID_TENANT_ID=common

# Email magic links (reuse existing Resend key)
AUTH_RESEND_KEY=

# Comma-separated domains for auto-internal role assignment
INTERNAL_EMAIL_DOMAINS=xtalsearch.com
